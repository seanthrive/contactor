<h2>Your Info:</h2>

<p>
	<strong>Email:</strong>
	<%= @user.email %>
</p>

<p>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
</p>


<h2>Contacts:</h2>

<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
	</tr>
	<%= render @user.contacts %>
</table>

<h2>Add many contacts:</h2>

<%= form_for @user do |f| %>
	<p>	
		<%= f.file_field :contacts_file %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>


<h2>Add a contact:</h2>

<%= render 'contacts/form' %>